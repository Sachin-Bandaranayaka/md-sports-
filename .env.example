# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database?connection_limit=1&pool_timeout=0&connect_timeout=60"
DIRECT_URL="postgresql://username:password@host:port/database"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"
JWT_SECRET="your-jwt-secret-here"

# Vercel KV (Redis) Configuration
# Get these from Vercel Dashboard > Storage > KV
KV_REST_API_URL="https://your-kv-instance.upstash.io"
KV_REST_API_TOKEN="your-kv-token"
KV_REST_API_READ_ONLY_TOKEN="your-kv-readonly-token"

# Redis Configuration (Alternative to Vercel KV for development)
REDIS_URL="redis://localhost:6379"

# Application Configuration
NODE_ENV="development"
PORT="3000"

# SMS Configuration (if using SMS features)
SMS_API_KEY="your-sms-api-key"
SMS_API_SECRET="your-sms-api-secret"

# Email Configuration (if using email features)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="your-email@gmail.com"

# File Upload Configuration
UPLOAD_MAX_SIZE="10485760" # 10MB
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp,application/pdf"

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING="true"
PERFORMACE_LOG_LEVEL="info"

# Cache Configuration
CACHE_TTL_DEFAULT="300" # 5 minutes
CACHE_TTL_DASHBOARD="60" # 1 minute
CACHE_TTL_INVENTORY="180" # 3 minutes
CACHE_TTL_REPORTS="600" # 10 minutes

# Security Configuration
CORS_ORIGIN="http://localhost:3000"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000" # 15 minutes

# Feature Flags
ENABLE_REALTIME_UPDATES="true"
ENABLE_ANALYTICS="true"
ENABLE_DEBUG_LOGGING="false"

# Vercel Specific (set in Vercel Dashboard)
# VERCEL_URL - automatically set by Vercel
# VERCEL_ENV - automatically set by Vercel
# VERCEL_REGION - automatically set by Vercel